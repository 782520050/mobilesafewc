<?xml version="1.0" encoding="utf-8"?>
<resources>
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    <string name="action_settings">Settings</string>
    <string name="app_name">黑马安全卫士</string>
    <string name="hello_world">Hello world!</string>
    <string name="sample_device_admin">手机卫士管理员</string>
    <string name="sample_device_admin_description">手机卫士超级管理员开启后可以远程锁屏,销毁数据</string>
    <string name="url">http://192.168.1.101:8080/updateinfo.json</string>
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.



        -->
    </style>
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="button_next">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@drawable/dg_confirm_selector</item>
        <item name="android:drawableRight">@drawable/next</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:text">下一步</item>
    </style>
    <style name="button_pre">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/dg_confirm_selector</item>
        <item name="android:drawableLeft">@drawable/previous</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:text">上一步</item>
    </style>
    <style name="text_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="text_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">#99CCFF</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">6dp</item>
    </style>
</resources>